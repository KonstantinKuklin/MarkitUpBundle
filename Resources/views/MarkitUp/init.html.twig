<script type="text/javascript">
    //<![CDATA[
    $(document).ready(function () {
        $('textarea.{{ config.textareaClass }}').each(function(){
            $(this).markItUp({{ config.bbcodeClass }}).css('width', '660px');
        });
    });
    //]]>
</script>